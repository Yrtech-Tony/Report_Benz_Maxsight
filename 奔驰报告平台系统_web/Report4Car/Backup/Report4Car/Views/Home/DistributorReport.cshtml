                },
                yAxis: {
                    title: {
                        text: '分数'
                    },
                    min: 0,
                    max: 100,
                    tickInterval: 10,
                    allowDecimals: false,
                    plotLines: [{
                        value: 0,
                        width: 1,
                        color: '#808080'
                    }]
                },
                tooltip: {
                    valueSuffix: ' 分',
                    shared: false
                },
                plotOptions: {
                    bar: {
                        dataLabels: {
                            enabled: true,
                            inside:true,
                            align: 'left',
                            verticalAlign: 'middle'
