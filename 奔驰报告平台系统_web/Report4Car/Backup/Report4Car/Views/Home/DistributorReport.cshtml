                    }
                },
                legend: {
                    layout: 'vertical',//horizontal，vertical
                    align: 'right',
                    verticalAlign: 'middle',
                    borderWidth: 0
                },
                credits: {
                    enabled: false
                }
            });

            $('#point3container').highcharts({
                chart: {
                    type: 'bar'
