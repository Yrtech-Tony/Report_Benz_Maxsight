                plotOptions: {
                    bar: {
                        dataLabels: {
                            enabled: true,
                            inside: true,
                            align: 'left',
                            verticalAlign: 'middle'
                        }
                    }
                },
                legend: {
                    layout: 'vertical',//horizontal，vertical
                    align: 'right',
                    verticalAlign: 'middle',
                    borderWidth: 0
                },
                credits: {
                    enabled: false
                }
            });

            fn_setChart1Data();
            fn_setChart2Data();
            fn_setChart3Data();
            $('#myTabs a').click(function (e) {
                e.preventDefault()
                $(this).tab('show');
                var title = $(this).html();
                var chart3 = $('#point3container').highcharts();
                chart3.setTitle({
                    text: title
                });
            })
        });

        function fn_setChart1Data() {
            var chart1 = $('#point1container').highcharts();
            chart1.xAxis[0].setCategories(['YTD', 'Q1[第1期]', 'Q2[第2期]', 'Q3[第3期]', 'Q4[第4期]']);
            chart1.addSeries({
                name: '得分',
                type: 'column',
