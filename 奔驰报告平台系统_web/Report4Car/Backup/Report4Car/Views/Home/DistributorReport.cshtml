                subtitle: {
                    text: null,
                    x: -20
                },
                xAxis: {
                    title: {
                        text: '期数'
                    },
                    categories: [],
                    allowDecimals: false,
                    plotLines: [{
                        value: 0,
                        width: 0,
                        color: '#808080'
                    }]
                },
                yAxis: {
                    title: {
                        text: '分数'
                    },
                    min: 0,
                    max: 100,
                    tickInterval: 20,
                    allowDecimals: false,
                    plotLines: [{
                        value: 0,
                        width: 1,
                        color: '#808080'
                    }]
                },
                tooltip: {
                    valueSuffix: ' 分',
                    shared: false
                },
                legend: {
                    layout: 'vertical',//horizontal，vertical
                    align: 'right',
                    floating: false,
                    verticalAlign: 'middle',
                    borderWidth: 0
                },
                plotOptions: {
                    column: {
                        dataLabels: {
                            enabled: true, //显示每条曲线每个节点的数据项的值
                            inside: true,
                            align: 'center',
                            verticalAlign: 'bottom'
                        }
                    },
                    line: {
                        dataLabels: {
                            enabled: false
                        }
                    },
                    spline: {
                        dataLabels: {
                            enabled: true
                        }
                    },
                    areaspline: {
                        dataLabels: {
                            enabled: false
                        }
                    }
                },
                credits: {
                    enabled: false
