                    alert("success");
                },
                complete: function (XMLHttpRequest, textStatus) {
                },
                error: function () {
                    alert("error");
                }
            });
        }

        $(function () {

            $('#distributor').addClass('active');

            $('#point1container').highcharts({
                chart: {
                    type: 'spline'
